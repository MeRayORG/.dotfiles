{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [

                {
                    "foreground": "#3c75df",
                    "style": "powerline",
                    "template": "{{.Icon}} ",
                    "type": "os"
                },

                {
                    "properties": {
                        "folder_icon": "\uea7c",
                        "folder_separator_icon": " \u276f ",
                        "home_icon": "\ueb06",
                        "style": "agnoster_short",
                        "max_depth": 3,
                        "gitdir_format": "<i>%s</i>",
                        "cycle": [
                            "#B2B2B2",
                            "#CCCCCC",
                            "#E5E5E5",
                            "#FFFFFF"
                        ],
                        "cycle_folder_separator": true,
                        "folder_format": "%s",
                        "mapped_locations": {
                            "~/nixconf": "\udb84\udd05"
                        }
                    },
                    "style": "powerline",
                    "template": " {{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#FFDE21",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_bare_info": true,
                        "branch_icon": "",
                        "mapped_branches": {
                            "": " \ue725 ",
                            "main": "",
                            "default": "",
                            "master": ""
                            
                        }
                    },
                    "style": "powerline",
                    "template": "{{ if .Staging.Changed  }}<b>{{ end }}{{ if .Working.Changed }}<i>{{ end }}{{ .HEAD }} \ue729 {{trim (trunc 22 .Commit.Subject)}}{{if gt (len .Commit.Subject) 22 }}\u2026{{end}}</></> ",
                    "type": "git"
                },
                {
                    "foreground": "#ff0000",
                    "style": "powerline",
                    "template": " \u2717{{ .String }} ",
                    "type": "status" 
                }

            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#29519A",
                    "properties": {
                        "style": "houston",
                        "threshold": 200
                    },
                    "style": "powerline",
                    "template": "\ueba2 {{ .FormattedMs }}",
                    "type": "executiontime"
                },
                {
                    "foreground": "#29519A",
                    "style": "powerline",
                    "template": "{{ if or (eq .UserName \"meray\") (eq .HostName \"raynix\")}}{{else}}{{.UserName}}@{{.HostName}} <transparent>\ue0ba\ue0bc</>{{end}} ",
                    "type": "session"
                },
                {
                    "foreground": "#3EC669",
                    "properties": {
                        "time_format": "15:04:05"
                    },
                    "style": "powerline",
                    "template": "{{ .CurrentDate | date .Format }}",
                    "type": "time"
                }
            ],
            "type": "prompt",
            "background": "#29519A",
            "foreground": "#ffffff"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#ffffff",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#ff0000{{ end }}"
                    ],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": " \u276f ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }        

    ],
    "transient_prompt": {
        "background": "transparent",
        "template": "{{.Segments.Time.Text}} {{ .Segments.Os.Text }}"
    },  
        
    "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üèö\" }} @ {{.HostName}}",
    "version": 3
}